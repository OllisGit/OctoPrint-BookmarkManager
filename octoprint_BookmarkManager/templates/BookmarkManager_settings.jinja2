
<form id="settings_bookmarkmanager" class="form-horizontal" onsubmit="return false;">
    <h3>Bookmarks Manager <small>{{ _('Version') }}: <span data-bind="text: pluginSettings.installed_version"></span></small></h3>

    <div class="row-fluid">
        <div class="span2"><h4>Open in Tab</h4></div>
        <div class="span3"><h4>Display Name</h4></div>
        <div class="span5"><h4>URL location</h4></div>
    </div>

    <div data-bind="foreach: pluginSettings.allBookmarks">
        <div class="row-fluid" style="margin-bottom: 5px">
            <div class="span2">
                <input type="checkbox" style="margin-top:0px" class="span12" data-bind="checked: showInNewTab">
            </div>
            <div class="span3">
                <input type="text" class="span12" data-bind="value: name">
            </div>
            <div class="span5">
                <input type="text" class="span12" data-bind="value: url">
            </div>
            <div class="span2">
                <a title="Remove Bookmark" class="btn btn-danger" data-bind="click: $parent.removeBookmark"><i class="far fa-trash-alt"></i></a>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="offset10 span2">
            <a title="Add Bookmark" class="btn btn-primary" data-bind="click: addBookmark"><i class="fas fa-plus"></i></a>
        </div>
    </div>

</form>



















